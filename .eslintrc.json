{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "semi": true,
                "singleQuote": false,
                "trailingComma": "es5",
                "printWidth": 120,
                "tabWidth": 4,
                "useTabs": false
            }
        ]
    }
}
